<div class="col-12 col-md-4 mb-4">
  <div class="rounded-lg border border-light bg-white shadow-sm p-3 h-100 d-flex flex-column align-items-center justify-content-between">
    <h3 class="font-weight-bold text-center mb-3"><%= post.title %></h3>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#<%= dom_id(post) %>">
      See more
    </button>
  </div>
</div>
<div class="modal fade" id="<%= dom_id(post) %>" tabindex="-1" role="dialog" aria-labelledby="<%= dom_id(post) %>" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= post.title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= post.content %>
      </div>
    </div>
  </div>
</div>
